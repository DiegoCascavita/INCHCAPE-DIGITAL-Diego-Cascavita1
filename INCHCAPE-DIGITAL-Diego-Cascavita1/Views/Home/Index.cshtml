@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!--  CDN de Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/site.css">

    <title>Ford</title>
</head>
<body>
    <div class="container">
        <!-- NAVBAR -->
        <nav class="navbar">
            <ul class="nav-list">
                <li><img src="assets/ford-logo.webp" class="ford-logo" alt="Ford-Logo" style="width: 95px; height: 35px;"></li>
                <li><a href="#">Vehicles</a></li>
                <li><a href="#">Shop</a></li>
                <li><a href="#">Fleet</a></li>
                <li><a href="#">Engineering</a></li>
                <li><a href="#">About Ford</a></li>
                <li><a href="#">Owner</a></li>
            </ul>
        </nav>
        <!-- Carrusel de Imágenes -->
        <section>
            <div id="imageCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="assets/Ford1.png" class="d-block w-100" alt="Image 1">
                    </div>
                    <div class="carousel-item">
                        <img src="assets/Ford-2.png" class="d-block w-100" alt="Image 2">
                    </div>
                    <div class="carousel-item">
                        <img src="assets/Ford-3.png" class="d-block w-100" alt="Image 3">
                    </div>
                    <div class="carousel-item">
                        <img src="assets/Ford-4.png" class="d-block w-100" alt="Image 4">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#imageCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#imageCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </section>
        <section>
            <div class="blue-block">
                <span>
                    For any concerns or inquiries about your Ford vehicle, our Customer Relationship Center can be of assistance
                    to you. Please call +632 8866 9408 or send us an email at <a href="mailto:emailus@ford.com">emailus@ford.com</a>.
                </span>
            </div>
        </section>
        <div class="h2-ford-lifestyle">
            <h2>
                A Ford vehicle for every lifestyle
            </h2>
        </div>
        <div class="gallery">
            <div class="gallery-row">
                <img src="assets/gallery-1.png" class="card" alt="Imagen 1">
                <img src="assets/gallery-2.png" class="card" alt="Imagen 2">
                <img src="assets/gallery-3.png" class="card" alt="Imagen 3">
                <img src="assets/gallery-4.png" class="card" alt="Imagen 4">
            </div>
        </div>
        <!-- Blog de Imágenes -->
        <section>
            <div class="h2-ford-lifestyle">
                <h2>What's happening at Ford</h2>
            </div>
            <div class="image-container">
                <div class="image-row">
                    <div class="image-item">
                        <img src="assets/blog-1.png" alt="Image 1">
                    </div>
                    <div class="image-item">
                        <img src="assets/blog-2.png" alt="Image 2">
                    </div>
                    <div class="image-item">
                        <img src="assets/blog-3.png" alt="Image 3">
                    </div>
                </div>
                <div class="image-row">
                    <div class="image-item">
                        <img src="assets/blog-4.png" alt="Image 4">
                    </div>
                    <div class="image-item">
                        <img src="assets/blog-5.png" alt="Image 5">
                    </div>
                    <div class="image-item">
                        <img src="assets/blog-6.png" alt="Image 6">
                    </div>
                </div>
                <div class="image-row">
                    <div class="image-item">
                        <img src="assets/blog-7.png" alt="Image 7">
                    </div>
                    <div class="image-item">
                        <img src="assets/blog-8.png" alt="Image 8">
                    </div>
                    <div class="image-item">
                        <img src="assets/blog-9.png" alt="Image 9">
                    </div>
                </div>
            </div>
        </section>
        <!-- Explore more -->
        <section>
            <div class="pattern-image">
                <img src="~/assets/Explore-More.webp" style="width: 100%; height: 300px;">

                <div class="centered-content">
                    <h2>Explore More</h2>
                    <div class="button-container">
                        <div class="button"><a href="#">Latest Offers</a></div>
                        <div class="button"><a href="#">View Pricelist</a></div>
                        <div class="button"><a href="#">Build & Price</a></div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Footer content here -->
        <footer>
            <div class="column-1">
                <div class="social-media">
                    <img src="~/assets/facebook.png">
                    <img src="~/assets/twiter.png">
                    <img src="~/assets/youtube.png">
                    <img src="~/assets/instagram.png">
                </div>
                <div class="footer-section">
                    <div class="texto-1-col">
                        <p>Homepage | Privacy Policy & Disclaimer | Ford Motor Company</p>
                    </div>
                    <p>© 2022 Ford Group Philippines, Inc. | Ford SUVs,Trucks,Van, and Performance Vehicles</p>
                </div>
            </div>
            <div class="column-2">
                <div class="Quick-links">
                    <span>Quick Links</span>
                </div>
                <div class="col-3">
                    <p>All Vehicles</p>
                    <p>Fleet Homepage</p>
                    <p>Book a Service</p>
                    <p>Ford Protect</p>
                    <p>Newsroom</p>
                    <p>Careers</p>
                    <p>About Ford</p>
                    <p>About Ford</p>
                    <p>Show More</p>
                </div>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

